html
    head
        style.
            body {
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100vh;
                background-color: #f2f2f2;
                font-family: Arial, sans-serif;
            }

            form {
                width: 400px;
                padding: 20px;
                background-color: #ffffff;
                border-radius: 4px;
                box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            }

            h1 {
                text-align: center;
                margin-bottom: 10px;
            }

            h2 {
                text-align: center;
                margin-bottom: 20px;
                color: #888888;
            }

            label {
                font-weight: bold;
            }

            input, select {
                width: 100%;
                padding: 8px;
                margin-bottom: 10px;
                border: 1px solid #ccc;
                border-radius: 4px;
                box-sizing: border-box;
            }

            button {
                width: 100%;
                padding: 10px;
                background-color: #4caf50;
                color: #ffffff;
                border: none;
                border-radius: 4px;
                cursor: pointer;
            }

    body
        form(method='POST' action='/add-cost')
            h1 Cost Manager
            h2 Add a cost

            label(for='user_id') User ID:
            input(type='text' name='user_id' id='user_id')

            label(for='date') Date:
            input(type='date' name='date' id='date')

            label(for='description') Description:
            input(type='text' name='description' id='description')

            label(for='category') Category:
            select(name='category' id='category')
                option(value='food') Food
                option(value='health') Health
                option(value='housing') Housing
                option(value='sport') Sport
                option(value='education') Education
                option(value='transportation') Transportation
                option(value='other') Other

            label(for='sum') Sum:
            input(type='number' name='sum' id='sum')

            button(type='submit') Add Cost
